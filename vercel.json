{
  "buildCommand": "npm run build",
  "installCommand": "npm install --no-package-lock --ignore-scripts",
  "framework": "nextjs",
  "env": {
    "HUSKY": "0",
    "NODE_OPTIONS": "--max_old_space_size=4096"
  },
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next",
      "config": {
        "nodeVersion": "20.x"
      }
    }
  ]
}
